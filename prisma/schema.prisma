// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =============================================
// NextAuth.js 所需模型
// =============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================================
// 业务模型
// =============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // bcrypt 哈希密码（Credentials 登录）
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  capabilityRadar   CapabilityRadar?
  interviewSessions InterviewSession[]
  learningPaths     LearningPath[]
  submissions       CodeSubmission[]
}

// 能力雷达图模型 - 6维能力评估
model CapabilityRadar {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 六个维度的得分 (0-100)
  basicSyntax       Int      @default(0)  // 基础语法
  memoryManagement  Int      @default(0)  // 内存管理
  dataStructures    Int      @default(0)  // 数据结构与算法
  oop               Int      @default(0)  // 面向对象设计
  stlLibrary        Int      @default(0)  // STL/库使用
  systemProgramming Int      @default(0)  // 系统编程能力

  updatedAt         DateTime @updatedAt
}

// 题目模型
model Problem {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  difficulty  String   // Easy, Medium, Hard
  category    String   // 分类：指针、内存、STL等
  tags        String   // JSON数组存储标签

  testCases   String   @db.Text // JSON存储测试用例

  hints       String?  @db.Text
  solution    String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  submissions CodeSubmission[]
}

// 代码提交记录
model CodeSubmission {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  problemId   String
  problem     Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)

  code        String   @db.Text
  language    String   // C or C++
  status      String   // Passed, Failed, Error

  aiReview    String?  @db.Text

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([problemId])
}

// 面试会话模型
model InterviewSession {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  type        String   // Technical, Behavioral
  status      String   // Active, Completed

  messages    String   @db.Text  // JSON格式对话历史

  evaluation  String?  @db.Text  // AI评估报告

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

// 学习路径模型
model LearningPath {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String   @db.Text

  steps       String   @db.Text  // JSON格式步骤

  currentStep Int      @default(0)
  progress    Int      @default(0) // 0-100

  status      String   @default("active") // active, completed, paused

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
